<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaDeTareasPablo.MVVM.Views.PantallaDetalle"
             Title="PantallaDetalle">
    
    <VerticalStackLayout Padding="20">
        <Entry Text="{Binding Nombre}" x:Name="LabelNombre" FontSize="20" />
        <CheckBox IsChecked="{Binding Completada}" x:Name="CheckCompletada" />
        <Button Text="Guardar"
                Clicked="OnSaveButtonClicked"
                Margin="0,10,0,10" />
    </VerticalStackLayout>
    
</ContentPage>